{% extends 'base.html.twig' %}
{% block title %}Liste{% endblock %}
{% block body %}
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th class="col-sm-4">Nom</th>
                <th class="col-sm-4">E-mail</th>
                <th class="col-sm-1">Activ√©</th>
                <th class="col-sm-3">Groupes</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
        <tr>
            <td>{{user.username}}</td>
            <td>{{user.email}}</td>
            <td>{{user.enabled}}</td>
            <td>
                <button type="button" class=" btn btn-xs btn-info"><span class="glyphicon glyphicon-plus"></span></button>
                {% for group in user.groups %}
                    <span class="label label-primary">{{group.name}} <span onClick="removeElement({{group.id}});" class="glyphicon glyphicon-minus"></span></span> 
                {%endfor%}
            </td>
        </tr>
        {%endfor%}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
<script type="text/javascript" src="{{ asset('bundles/app/js/jquery.dataTables.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/app/js/dataTables.bootstrap.min.js') }}"></script>
<script>$(document).ready(function() {
    $('#example').DataTable();
    
} );
function removeElement(id) {
    alert(id);
}
</script>
{% endblock %} 
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('bundles/app/css/dataTables.bootstrap.min.css') }}" >
{% endblock %}